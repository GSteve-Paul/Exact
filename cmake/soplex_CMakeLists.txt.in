cmake_minimum_required(VERSION 2.8.2)

project(soplex-download NONE)

include(ExternalProject)
ExternalProject_Add(soplex_pkg
    URL "${soplex_pkg}"
    URL_MD5 cc196e749fbe9372e01b4fabeb3a3af2
